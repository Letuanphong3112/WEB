    <script>
        function signup() {
            var layoutlogin = document.getElementById("layoutlogin");
            var layoutsignup = document.getElementById("layoutsignup");
            var signupButton = document.getElementById("signup");
            layoutlogin.style.left = '-900px';
            layoutsignup.style.left = '0px';
        }
        function closeform() {
            document.getElementById("loginform").style.opacity = 0;
        }
        function Login() {
             var xhr = new XMLHttpRequest();
                xhr.open('GET', '@Url.Action("Login", "Login")', true);
                xhr.onreadystatechange = function () {
                if (xhr.readyState == 4 && xhr.status == 200) {
                    document.getElementById("loginform").innerHTML = xhr.responseText;
                    // Đặt opacity thành 1
                    document.getElementById("loginform").style.opacity = 1;
                    document.getElementById("loginform").style.transition = 'linear 1s';
                }
        };
            xhr.send();
        }
    </script>
    <style>
        #loginform {
            opacity: 0;
        }
    </style>
</head>
